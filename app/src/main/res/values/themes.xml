<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PalitosMensajes" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/marron_2</item>
        <item name="colorPrimaryVariant">@color/marron_1</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/acento_1</item>
        <item name="colorSecondaryVariant">@color/acento_2</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>


    </style>


<style name="test" parent="Theme.PalitosMensajes">
    <item name="android:textColor">@color/white</item>
</style>


    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/marron_1</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/stick_chat</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="postSplashScreenTheme">@style/Theme.PalitosMensajes</item>
    </style>


</resources>